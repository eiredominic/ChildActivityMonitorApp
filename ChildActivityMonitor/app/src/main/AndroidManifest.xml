<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenamarie.childactivitymonitor" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".ParentHomeActivity"
            android:label="@string/title_activity_parent_home" >
        </activity>
        <activity
            android:name=".MinderActivity"
            android:label="@string/title_activity_minder_home"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SlidingTabs.MinderHome"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_minder_home"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
